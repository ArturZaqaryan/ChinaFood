@using ChinaFood.Domain
@using ChinaFood.Domain.Entities
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<CommonResources> SharedLocalizer
@model DishModel

<div class="article__card card card_big" style="background-image: url(../@Model?.TitleImagePath);">
    @await Html.PartialAsync("Forms/AddToCartForm")
    @await Html.PartialAsync("Forms/SingleDishForm")
   <div class="card__row card card_big" style="background-image: url(../@Model?.TitleImagePath);">
        <div class="card__name">
            <p>@Model?.Title</p>
            <p>@Model?.Title</p>
        </div>
        @if (Model.Discount == 0)
        {
            <div class="card__price">
                @Model?.Price ֏
            </div>
        }
        else
        {
            <div class="card__price">
                <s>@Model?.Price ֏</s>
                @{var newPrice = Model?.Price - (Model?.Price * Model.Discount / 100);} @newPrice ֏
            </div>
        }
    </div>
</div>
