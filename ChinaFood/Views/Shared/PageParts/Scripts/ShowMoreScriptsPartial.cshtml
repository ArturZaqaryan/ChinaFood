@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<CommonResources> SharedLocalizer

<script>
    // Передача локализованных строк в глобальный объект
    window.localization = {
        showMore: '@SharedLocalizer["ShowMore"]',
        showLess: '@SharedLocalizer["ShowLess"]'
    };
</script>
<script src="~/js/show-more.js"></script>
