@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<CommonResources> SharedLocalizer
@model List<(CartItem, DishModel)>
@{
    Layout = "Layouts/_LayoutCart";
}
<div class="content">
    <div class="container search-results">
        <div class="content__column">
            <article class="article">
                <div class="article__title title">
                    <h3>Your cart</h3>
                </div>
                <div class="cart">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Здесь будут динамически добавляться товары -->
                        </tbody>
                    </table>
                    <div class="cart-total">
                        Total: <span id="cart-total">0</span>
                    </div>
                    <button id="checkout-button" style="margin-top: 20px">Proceed to Checkout</button>
                </div>

                <!-- Форма оформления заказа -->
                <div class="checkout-form" style="display: none; width: fit-content; margin-bottom: 30px">
                    <h3>Checkout</h3>
                    <form id="checkout-form" class="poster__form form">
                        <div class="form__row">
                            <div class="form__item-column">
                                <label for="name">Name</label>
                                <input type="text" id="name" name="name" required>
                            </div>
                        </div>
                        <div class="form__row">
                            <div class="form__item-column">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" required>
                            </div>
                        </div>
                        <div class="form__row">
                            <div class="form__item-column">
                                <label for="phone">Phone</label>
                                <input type="text" id="phone" name="phone" required>
                            </div>
                        </div>
                        <div class="form__row">
                            <div class="form__item-column">
                                <label for="address">Address</label>
                                <textarea id="address" name="address" required></textarea>
                            </div>
                        </div>
                        <div class="form__row">
                            <div class="form__item-column">
                                <button type="submit" class="submit">Submit Order</button>
                            </div>
                        </div>
                    </form>
                </div>
            </article>
        </div>
    </div>
</div>


